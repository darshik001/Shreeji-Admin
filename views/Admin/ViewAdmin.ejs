<%-include('../Header')%>
    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-people-fill me-2"></i>Administrators
                    </h1>
                    <p class="mb-0 opacity-75">Manage all administrator accounts</p>
                </div>
                <div class="mt-3 mt-md-0">
                    <a href="/admin/add-admin" class="btn btn-light">
                        <i class="bi bi-person-plus me-1"></i> Add New Admin
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Stats Overview -->
        <div class="row mb-4 justify-content-center">
            <div class="col-md-6">
                <div class="stats-card total">
                    <div class="stats-number"><%=totaladmin%></div>
                    <div class="stats-label">Total Admins</div>
                </div>
            </div>
           
            
        </div>

        <!-- Search and Filters -->
        <div class="row mb-4 justify-content-end">
            <div class="col-md-4">
                
                <form action="">
                        <div class="input-group search-box">
                        <input type="text" class="form-control  position-relative" name="search" placeholder="Search admins by name, email, or role...">
                        <i class="bi bi-search position-absolute  translate-middle top-50"></i>
                    </div>
                    </form>
            </div>
           
        </div>

        <!-- Cards View -->


        <!-- Table View (Default) -->
        <div class="row mb-4" id="tableView">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="adminsTable">
                        <thead>
                            <tr>
                                <th width="50">#</th>
                                <th>Admin</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Join</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                           

                            <%admins.forEach((admin,i)=>{%>

                                <tr>
                                    <td><%=i +1%></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <%if(admin.profileImage !=="" ){ %>
                                                <img src="<%=admin.profileImage%>"
                                                alt="Avatar" class="admin-avatar-sm me-3">
                                               <% } else{%>  
                                                   <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80"
                                                   alt="Avatar" class="admin-avatar-sm me-3">
                                               <% }%>
                                                <div>
                                                    <strong>
                                                        <%=admin.firstname%>
                                                            <%=admin.lastname%>
                                                    </strong>
                                                </div>
                                        </div>
                                    </td>
                                    <td>
                                        <%=admin.email%>
                                    </td>
                                    <td><span class="">
                                            <%=admin.phone%>
                                        </span></td>
                                    <td><span class="admin-role role-super-admin"><%=admin.role%></span></td>
                                    <td>
                                        <%=admin.joindate%>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" data-bs-toggle="modal"
                                                data-bs-target="#viewModal">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                             <%if(locals.user.role !=="editor"){%>
                                            <a href="/admin/edit-admin/<%=admin.id%>" class="btn btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                           <% }%>

                                            <%if(locals.user.role !=="admin" && locals.user.role !=="editor"){%>
                                                <a href="/admin/delete-admin/<%=admin.id%>" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                           <% }%>
                                            
                                        </div>
                                    </td>
                                </tr>
                                <% })%>




                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Empty State -->
         <%if(admins.length <=0){ %>
        <div class="row" id="emptyState">
            <div class="col-12">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="mb-3">No Administrators Found</h3>
                    <p class="text-muted mb-4">
                        No administrators match your search criteria. Try adjusting your search or add a new
                        administrator.
                    </p>
                    <a href="/admin/add-admin" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i> Add New Administrator
                    </a>
                </div>
            </div>
        </div>
        <%}%>
    </div>
    <!-- Pagination -->
    <style>

        .bi-search{
            right: 5px ;
        }
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
        }

        body {
            background-color: #f8f9fa;
        }

        .page-header {
            background-color: var(--primary-color);
            color: white;
            padding: 30px 0;
            margin-bottom: 30px;
        }

        .admin-card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .admin-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid white;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin: -50px auto 20px;
            background-color: #f8f9fa;
        }



        .admin-role {
            font-size: 0.9rem;
            font-weight: 500;
            padding: 4px 12px;
            border-radius: 20px;
            display: inline-block;
        }

        .role-super-admin {
            background-color: #e8f4fc;
            color: #3498db;
            border: 1px solid #3498db;
        }

        .role-admin {
            background-color: #f0f8ff;
            color: #2980b9;
            border: 1px solid #2980b9;
        }

        .role-moderator {
            background-color: #f9f9f9;
            color: #7f8c8d;
            border: 1px solid #7f8c8d;
        }

        .admin-actions {
            border-top: 1px solid #eee;
            padding-top: 15px;
            margin-top: 15px;
        }

        .action-btn {
            padding: 6px 12px;
            font-size: 0.85rem;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .btn-view {
            background-color: #3498db;
            color: white;
        }

        .btn-view:hover {
            background-color: #2980b9;
            color: white;
        }

        .btn-edit {
            background-color: #f8f9fa;
            color: #2c3e50;
            border: 1px solid #dee2e6;
        }

        .btn-edit:hover {
            background-color: #e9ecef;
            color: var(--primary-color);
        }

        .btn-delete {
            background-color: #fff5f5;
            color: #e74c3c;
            border: 1px solid #fadbd8;
        }

        .btn-delete:hover {
            background-color: #ffe6e6;
            color: #c0392b;
        }

        .search-box {
            max-width: 400px;
        }

        .stats-card {
            border-radius: 10px;
            padding: 20px;
            color: white;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .stats-card.total {
            background: linear-gradient(135deg, #3498db, #2980b9);
        }

        .stats-card.active {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .stats-card.inactive {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stats-label {
            font-size: 1rem;
            opacity: 0.9;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .empty-state-icon {
            font-size: 4rem;
            color: #bdc3c7;
            margin-bottom: 20px;
        }

        .table-responsive {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .table th {
            background-color: var(--primary-color);
            color: white;
            border: none;
            font-weight: 600;
            padding: 15px;
        }

        .table td {
            padding: 15px;
            vertical-align: middle;
            border-color: #f1f1f1;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .admin-avatar-sm {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .filter-buttons .btn {
            margin-right: 5px;
            margin-bottom: 5px;
        }

        .modal-header {
            background-color: var(--primary-color);
            color: white;
            border-radius: 0;
        }

        .modal-footer {
            border-top: 1px solid #eee;
        }
        
        
        @media (max-width: 768px) {
            .admin-avatar {
                width: 80px;
                height: 80px;
                margin-top: -40px;
            }

            .stats-number {
                font-size: 2rem;
            }
        }
    </style>

    <%-include('../Footer')%>