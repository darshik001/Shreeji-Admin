<!-- Main Content - Homepage Product Details -->
 <%-include('Header')%>
    <main class="main-content">

        <div class="card border-0 shadow-sm mb-4">
  <div class="card-body p-3">

    <!-- ONE FORM -->
    <form method="GET" action="">
      <div class="row g-2">

        <!-- SEARCH -->
        <div class="col-md-4">
          <div class="input-group">
            <span class="input-group-text bg-light border-0">
              <i class="bi bi-search"></i>
            </span>
            <input 
              type="text"
              name="search"
              value="<%= search %>"
              class="form-control border-0 bg-light"
              placeholder="Search And Enter"
            >
          </div>
        </div>

        <!-- CATEGORY -->
        <div class="col-md-3">
          <select class="form-select bg-light border-0" name="category">
            <option value="">Select Category</option>

            <% categories.forEach((cat)=> { %>
              <option 
                value="<%= cat.category %>"
                <%= category == cat.category ? 'selected' : '' %>
              >
                <%= cat.category %>
              </option>
            <% }) %>

          </select>
        </div>

        <!-- SORT -->
        <div class="col-md-3">
          <select class="form-select bg-light border-0" name="sort">
            <option  value="">Sort by Latest</option>
            <option <%= sort == 'low' ? 'selected' : '' %> value="low">Price: Low to High</option>
            <option <%= sort == 'heigh' ? 'selected' : '' %> value="heigh">Price: High to Low</option>
            <option <%= sort == 'name' ? 'selected' : '' %> value="name">Name: A to Z</option>
          </select>
        </div>

        <!-- BUTTONS -->
        <div class="col-md-2 d-flex gap-2">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-funnel"></i> Filter
          </button>

          <a href="/web" class="btn btn-outline-secondary w-100">
            Reset
          </a>
        </div>

      </div>
    </form>

  </div>
</div>
        <div class="page-title">
            <h2>Our Products</h2>
            <p>Discover our amazing collection of products</p>
        </div>



          
        <div class="row">


            <%products.forEach((product)=>{%>
                
                <div class="col-4 my-3">
              <a href="/web/singleview/<%=product._id%>" class="text-decoration-none">
                 <div class="product-card " style="height: 600px;">
                <!-- <div class="product-badge">New</div> -->
                <div class="product-image">
                    <img src="<%=product.productImage[0]%>" alt="Product">
                </div>
                <div class="product-info">
                    <div class="product-category">
                        <span class="category-tag"><%=product.subcategoryid.subcategory%></span>
                        <span class="category-tag"><%=product.extracategoryid.extracategory%></span>
                    </div>
                    <h3 class="product-name"><%=product.name%></h3>
                    <p class="product-description">
                       <%=product.description%>
                    </p>
                    <div class="product-price-row">
                        <span class="product-price">$<%=product.price%></span>
                        <%if(product.stock>5){%>
                            <span class="product-stock">In Stock:<%=product.stock%></span>
                            <%}else{%>
                            <span class="product-stock bg-danger text-bg-danger">Low Stock:<%=product.stock%></span>
                                
                                <%}%>
                    </div>
                    <div class="product-meta">
                        <span><i class="fas fa-tag"></i> Category: <%=product.categoryid.category%></span>
                    </div>
                    <div class="product-actions mt-5">
                        <button class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Add to Cart</button>
                        <button class="btn btn-outline"><i class="fas fa-heart"></i></button>
                    </div>
                </div>
            </div>
              </a>
         </div>
                <%})%>

        </div>
    </main>


 <%-include('Footer')%>
