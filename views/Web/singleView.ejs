<%-include('Header')%>

  <div class="single-product-container">
        <!-- Back Link (UI only) -->
        <a href="/web" class="back-link" >
            <i class="fas fa-arrow-left"></i>
            Back to Products
        </a>

        <div class="product-wrapper">
            <div class="row g-0">
                <!-- Gallery Column -->
                <div class="col-lg-6">
                    <div class="gallery-section">
                        <!-- Main Image -->
                        <div class="main-image-box">
                            <img src="<%=product.productImage[0]%>" 
                                 alt="<%=product.name%>" 
                                 class="main-image">
                        </div>
                        
                        <!-- Thumbnails -->
                        <div class="thumbnail-grid">
                            <% product.productImage.forEach((image, index) => { %>
                                <div class="thumbnail-box <%= index === 0 ? 'active' : '' %>">
                                    <img src="<%= image %>" 
                                         alt="Thumbnail <%= index + 1 %>" 
                                         class="thumbnail-img">
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <!-- Info Column -->
                <div class="col-lg-6">
                    <div class="info-section">
                       

                        <!-- Title -->
                        <h1 class="product-title"><%=product.name%></h1>

                        <!-- Categories -->
                        <div class="category-list">
                            <span class="category-item">
                                <i class="fas fa-folder me-1"></i><%=product.categoryid.category%>
                            </span>
                            <span class="category-item">
                                <i class="fas fa-tag me-1"></i><%=product.subcategoryid.subcategory%>
                            </span>
                            <span class="category-item">
                                <i class="fas fa-tags me-1"></i><%=product.extracategoryid.extracategory%>
                            </span>
                        </div>

                        <!-- Price Box -->
                        <div class="price-box">
                            <div class="row align-items-center">
                                <div class="col-md-7">
                                    <div class="price-label">PRICE</div>
                                    <div class="current-price">$<%=product.price%></div>
                                </div>
                                <div class="col-md-5 text-md-end">
                                    <% if(product.stock > 5) { %>
                                        <span class="stock-status stock-high">
                                            <i class="fas fa-check-circle me-1"></i>In Stock: <%=product.stock%>
                                        </span>
                                    <% } else { %>
                                        <span class="stock-status stock-low">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Low Stock: <%=product.stock%>
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <!-- Quantity (UI only) -->
                        <div class="quantity-selector">
                            <button class="qty-btn" onclick="return false;">âˆ’</button>
                            <input type="text" class="qty-input" value="1" readonly>
                            <button class="qty-btn" onclick="return false;">+</button>
                            <span class="max-stock">
                                <i class="fas fa-box me-1"></i>Max: <%=product.stock%>
                            </span>
                        </div>

                        <!-- Description -->
                        <div class="description-box">
                            <div class="description-title">
                                <i class="fas fa-align-left"></i>
                                Product Description
                            </div>
                            <p class="description-text">
                                <%=product.description%>
                            </p>
                        </div>

                        <!-- Meta Info -->
                        <div class="meta-grid">
                            <div class="meta-card">
                                <div class="meta-icon"><i class="fas fa-box"></i></div>
                                <div class="meta-label">Stock Status</div>
                                <div class="meta-value"><%=product.stock > 0 ? 'Available' : 'Out of Stock'%></div>
                            </div>
                            <div class="meta-card">
                                <div class="meta-icon"><i class="fas fa-tag"></i></div>
                                <div class="meta-label">Category</div>
                                <div class="meta-value"><%=product.categoryid.category%></div>
                            </div>
                            <div class="meta-card">
                                <div class="meta-icon"><i class="fas fa-hashtag"></i></div>
                                <div class="meta-label">Product ID</div>
                                <div class="meta-value"><%=product._id.toString().slice(-6).toUpperCase()%></div>
                            </div>
                        </div>

                        <!-- Action Buttons (UI only) -->
                        <div class="action-group">
                            <button class="btn-add-cart" onclick="return false;">
                                <i class="fas fa-shopping-cart"></i>
                                Add to Cart
                            </button>
                            <button class="btn-wishlist" onclick="return false;">
                                <i class="fas fa-heart"></i>
                            </button>
                            <button class="btn-share" onclick="return false;">
                                <i class="fas fa-share-alt"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f8f9fa;
        }

        .single-product-container {
            max-width: 1400px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #666;
            text-decoration: none;
            font-size: 16px;
            margin-bottom: 30px;
            padding: 10px 0;
        }

        .back-link:hover {
            color: #4f46e5;
        }

        .product-wrapper {
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            overflow: hidden;
        }

        /* Gallery Section */
        .gallery-section {
            padding: 40px;
            background: #f8fafc;
            height: 100%;
        }

        .main-image-box {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .main-image {
            width: 100%;
            height: 450px;
            object-fit: contain;
            mix-blend-mode: multiply;
        }

        .thumbnail-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 15px;
        }

        .thumbnail-box {
            background: white;
            border-radius: 12px;
            padding: 15px;
            cursor: default;
            border: 2px solid transparent;
            transition: border-color 0.2s;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .thumbnail-box.active {
            border-color: #4f46e5;
        }

        .thumbnail-img {
            width: 100%;
            height: 90px;
            object-fit: contain;
            mix-blend-mode: multiply;
        }

        /* Info Section */
        .info-section {
            padding: 40px;
        }

        .product-badge {
            display: inline-block;
            background: #4f46e5;
            color: white;
            padding: 6px 15px;
            border-radius: 30px;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .product-title {
            font-size: 36px;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 15px;
            line-height: 1.2;
        }

        .category-list {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 25px;
        }

        .category-item {
            background: #f1f5f9;
            color: #334155;
            padding: 6px 15px;
            border-radius: 30px;
            font-size: 14px;
            font-weight: 500;
        }

        .price-box {
            background: #f8fafc;
            padding: 25px;
            border-radius: 16px;
            margin-bottom: 25px;
        }

        .price-label {
            font-size: 14px;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .current-price {
            font-size: 42px;
            font-weight: 800;
            color: #4f46e5;
            line-height: 1;
        }

        .stock-status {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 30px;
            font-size: 14px;
            font-weight: 600;
        }

        .stock-high {
            background: #d1fae5;
            color: #065f46;
        }

        .stock-low {
            background: #fee2e2;
            color: #991b1b;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            gap: 15px;
            background: #f8fafc;
            padding: 15px 25px;
            border-radius: 50px;
            margin-bottom: 25px;
        }

        .qty-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: none;
            background: white;
            color: #4f46e5;
            font-size: 18px;
            font-weight: 600;
            cursor: default;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .qty-input {
            width: 50px;
            text-align: center;
            border: none;
            background: transparent;
            font-size: 18px;
            font-weight: 600;
            color: #1e293b;
        }

        .qty-input:focus {
            outline: none;
        }

        .max-stock {
            margin-left: auto;
            color: #64748b;
            font-size: 14px;
        }

        .description-box {
            background: #f8fafc;
            padding: 25px;
            border-radius: 16px;
            margin-bottom: 25px;
        }

        .description-title {
            font-size: 18px;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .description-title i {
            color: #4f46e5;
        }

        .description-text {
            color: #475569;
            font-size: 16px;
            line-height: 1.7;
            margin: 0;
        }

        .meta-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-bottom: 30px;
        }

        .meta-card {
            background: #f8fafc;
            padding: 15px;
            border-radius: 12px;
            text-align: center;
        }

        .meta-icon {
            font-size: 20px;
            color: #4f46e5;
            margin-bottom: 8px;
        }

        .meta-label {
            font-size: 12px;
            color: #64748b;
            margin-bottom: 5px;
        }

        .meta-value {
            font-size: 14px;
            font-weight: 700;
            color: #1e293b;
        }

        .action-group {
            display: flex;
            gap: 15px;
        }

        .btn-add-cart {
            flex: 2;
            background: #4f46e5;
            color: white;
            border: none;
            padding: 16px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            cursor: default;
            transition: opacity 0.2s;
        }

        .btn-add-cart:hover {
            opacity: 0.9;
        }

        .btn-wishlist {
            flex: 1;
            background: white;
            color: #4f46e5;
            border: 2px solid #4f46e5;
            padding: 16px;
            border-radius: 50px;
            font-size: 18px;
            cursor: default;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn-share {
            flex: 1;
            background: #f1f5f9;
            color: #334155;
            border: none;
            padding: 16px;
            border-radius: 50px;
            font-size: 18px;
            cursor: default;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .gallery-section, .info-section {
                padding: 20px;
            }

            .product-title {
                font-size: 28px;
            }

            .current-price {
                font-size: 32px;
            }

            .meta-grid {
                grid-template-columns: 1fr;
            }

            .action-group {
                flex-direction: column;
            }

            .main-image {
                height: 300px;
            }

            .thumbnail-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
<%-include('Footer')%>