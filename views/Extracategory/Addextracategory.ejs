   <%-include('../Header')%>

    

    <div class="form-container my-3 mx-auto">
        <div class="form-card">
            <!-- Form Header -->
            <div class="form-header">
                <h3 class="mb-1">
                    <i class="bi bi-plus-circle me-2"></i>Add New Extra Category
                </h3>
                <p class="mb-0 opacity-75">Enter Extra category details below</p>
            </div>
            
            <!-- Form Body -->
            <div class="form-body">
                <form id="addCategoryForm" action="/extracategory/add-extracategory" method="post">

                    <!-- Category Name Field -->

                     <div class="mb-4">
                        <label for="categoryName" class="form-label">Category Name</label>
                       <select  class="form-select form-control" name="categoryid" id="categoryid">
                        <option value="">Select Category</option>
                        <%category.forEach((category)=>{%>
                            <option value="<%=category._id%>"><%=category.category%></option>
                            <%})%>
                       </select>
                    </div>


                    <div class="mb-4">
                        <label for="categoryName" class="form-label">SubCategory Name</label>
                       <select  class="form-select form-control" name="subcategoryid" id="subcategoryid">
                        <option value="">Select Category</option>
                        
                       </select>
                    </div>
                    <!-- Extra Category Name Field -->

                    <div class="mb-4">
                        <label for="categoryName" class="form-label">ExtraCategory Name</label>
                        <input type="text" 
                               class="form-control" 
                               id="categoryName" 
                               name="extracategory"
                               placeholder="Enter extracategory name">
                    </div>
                    
                  
                   
                    
                    <!-- Form Actions -->
                    <div class="row mt-4">
                        <div class="col-md-6 mb-3">
                            <button type="button" class="btn btn-cancel">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </button>
                        </div>
                        <div class="col-md-6 mb-3">
                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-plus-circle me-1"></i> Add ExtraCategory
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // Cancel button
            document.querySelector('.btn-cancel').addEventListener('click', function() {
                if (confirm('Are you sure you want to cancel? All unsaved changes will be lost.')) {
                    document.getElementById('addCategoryForm').reset();
                    imagePreview.style.display = 'none';
                }
            });


            // dependent dropdown

            let category = document.getElementById('categoryid')
            let subcategory = document.getElementById('subcategoryid')

            category.addEventListener('change',()=>{

               fetch(`/extracategory/getsubcategory/${category.value}`)
               .then(res=>res.json())
               .then((data) =>{
                       subcategory.innerHTML = '<option value="">Select Category</option>'
               data.subcategory.forEach(subcat => {
                    let option = document.createElement('option')
                    option.value = subcat._id;
                    option.innerHTML = subcat.subcategory
                    subcategory.append(option)
               });
                
               })
               .catch(err=>console.log(err))
    
            })
        });
    </script>

