<%-include('../Header')%>

    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }
         .bi-search{
            right: 5px ;
        }
        .page-header {
            background-color: white;
            padding: 25px 0;
            margin-bottom: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .table-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            padding: 20px;
            margin-bottom: 30px;
        }
        
        .table th {
            background-color: var(--primary-color);
            color: white;
            border: none;
            font-weight: 600;
            padding: 15px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }
        
        .table td {
            padding: 15px;
            vertical-align: middle;
            border-color: #f1f1f1;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        
        .category-image-td {
            /* width: 200px; */
        }
        
        .category-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #f0f0f0;
        }
        
        .no-image {
            width: 80px;
            height: 80px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border: 2px dashed #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #adb5bd;
        }
        
        .action-buttons .btn {
            padding: 6px 10px;
            font-size: 0.85rem;
            border-radius: 6px;
            margin: 2px;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .empty-state-icon {
            font-size: 4rem;
            color: #bdc3c7;
            margin-bottom: 20px;
        }
        
        .search-box {
            max-width: 400px;
        }
        
        
        @media (max-width: 768px) {
            .table-responsive {
                font-size: 0.9rem;
            }
            
            .action-buttons .btn {
                padding: 4px 8px;
                font-size: 0.8rem;
            }
            
            .category-image {
                width: 60px;
                height: 60px;
            }
            
            .no-image {
                width: 60px;
                height: 60px;
            }
        }
    </style>

    <!-- Page Header -->
    <div class="page-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="bi bi-grid-3x3-gap me-2"></i>ExtraCategories
                    </h1>
                </div>
                <div class="mt-3 mt-md-0">
                    <a href="/extracategory/add-extracategory" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i> Add extracategory
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="container">
        <!-- Stats Overview -->
        <div class="row mb-4 justify-content-end">
            <div class="col-md-4">
                <form action="">
                        <div class="input-group search-box">
                        <input type="text" class="form-control  position-relative" value="<%=search%>" name="search" placeholder="Search Category by name">
                        <i class="bi bi-search position-absolute  translate-middle top-50"></i>
                        </div>
                </form>
            </div>


        

        <!-- Search and Filters -->
       
           
        </div>
        
        <!-- Categories Table -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th width="50">#</th>
                            <th>Image</th>
                            <th>Extracategory Name</th>
                            <th>SubCategory Name</th>
                            <th>Category Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(extracategory && extracategory.length > 0) { %>
                            <% extracategory.forEach((extracategory, index)=>{%>
                                <tr>
                                    <td><%= index + 1 %></td>
                                     <td class="category-image-td">
                                        <% if(extracategory.categoryid.categoryImage && extracategory.categoryid.categoryImage.trim() !== '') { %>
                                            <img src="<%=extracategory.categoryid.categoryImage%>" 
                                                 alt="<%=extracategory.extracategory%>" 
                                                 class="category-image">
                                        <% } else { %>
                                            <div class="no-image">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <strong><%=extracategory.extracategory%></strong><br>
                                    </td>
                                     <td>
                                        <strong><%=extracategory.subcategoryid.subcategory%></strong><br>
                                    </td>
                                     <td>
                                        <strong><%=extracategory.categoryid.category%></strong><br>
                                    </td>
                                   
                                   
                                    
                                    
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/extracategory/edit-extracategory/<%=extracategory._id%>" 
                                               class="btn btn-sm btn-outline-secondary me-1">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/extracategory/delete-extracategory/<%=extracategory._id%>" 
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="empty-state" style="padding: 30px; box-shadow: none;">
                                        <div class="empty-state-icon">
                                            <i class="bi bi-grid-3x3-gap"></i>
                                        </div>
                                        <h3 class="mb-3">No ExtraCategories Found</h3>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>

              
                
            </div>
        </div>
        
        <!-- Pagination -->
        <%if(totalpage && totalpage >1){%>
                
                 <nav aria-label="Page navigation" class="d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item ">
                            <a class="page-link <%=currntpage <= 1?'disabled':''%> " href="?page=<%=currntpage -1%>&search=<%=search%>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                       
                          <%for(let i = 1 ;i<=totalpage;i++){%>
                            <li class="page-item <%=currntpage == i?'active':''%>" aria-current="page">
                            <a class="page-link" href="?page=<%=i%>&search=<%=search%>"><%=i%></a>
                        </li>
                            
                            <%}%>
                        <li class="page-item">
                            <a class="page-link <%=currntpage == totalpage?'disabled':''%>" href="?page=<%=currntpage +1%>&search=<%=search%>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <%}%>
    </div>

<%-include('../Footer')%>