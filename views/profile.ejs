
<%- include("Header")%>

    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }
        
        .profile-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 60px 0 40px;
            margin-bottom: 50px;
        }
        
        .profile-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background-color: #f8f9fa;
        }
        
        .profile-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: none;
            margin-bottom: 30px;
        }
        
        .card-header {
            background-color: white;
            border-bottom: 2px solid #f0f0f0;
            padding: 20px 25px;
            border-radius: 15px 15px 0 0 !important;
        }
        
        .card-header h5 {
            color: var(--primary-color);
            font-weight: 700;
            margin: 0;
        }
        
        .card-body {
            padding: 25px;
        }
        
        .info-item {
            display: flex;
            padding: 15px 0;
            border-bottom: 1px solid #f5f5f5;
        }
        
        .info-item:last-child {
            border-bottom: none;
        }
        
        .info-label {
            width: 200px;
            font-weight: 600;
            color: var(--primary-color);
        }
        
        .info-value {
            flex: 1;
            color: #555;
        }
        
        .stats-card {
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        
        .stats-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--secondary-color);
            line-height: 1;
        }
        
        .stats-label {
            color: #666;
            font-size: 0.9rem;
            margin-top: 8px;
        }
        
        .btn-edit {
            background-color: var(--secondary-color);
            color: white;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
        }
        
        .btn-edit:hover {
            background-color: #2980b9;
            color: white;
            transform: translateY(-2px);
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
        }
        
        .section-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f0f0f0;
        }
        
        .activity-item {
            display: flex;
            padding: 15px;
            border-bottom: 1px solid #f5f5f5;
            transition: background-color 0.2s;
        }
        
        .activity-item:hover {
            background-color: #f8f9fa;
        }
        
        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: #e3f2fd;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--secondary-color);
            font-size: 1.2rem;
            margin-right: 15px;
        }
        
        .activity-content {
            flex: 1;
        }
        
        .activity-time {
            color: #888;
            font-size: 0.85rem;
        }
        
        .badge-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        
        .badge-active {
            background-color: #d4edda;
            color: #155724;
        }
        
        @media (max-width: 768px) {
            .info-item {
                flex-direction: column;
            }
            
            .info-label {
                width: 100%;
                margin-bottom: 5px;
            }
            
            .profile-avatar {
                width: 120px;
                height: 120px;
            }
        }
    </style>
</head>
<body>
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-2 text-center text-md-start mb-4 mb-md-0">
                    <%if(locals.user.profileImage){%>
                        
                        <img src="<%=locals.user.profileImage%>" alt="Profile Picture" class="profile-avatar">
                        <%}else{%>
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" 
                            alt="Profile Picture" class="profile-avatar">
                            <%  }%>
                </div>
                <div class="col-md-7">
                    <h1 class="h2 mb-2"><%=locals.user.firstname%> <%=locals.user.lastname%></h1>
                    <p class="mb-1"><%=locals.user.role%></p>
                    <p class="mb-3 opacity-75"><%=locals.user.email%></p>
                    <span class="badge badge-status badge-active">Active</span>
                </div>
                <div class="col-md-3 text-md-end mt-4 mt-md-0">
                    <a href="/admin/edit-admin/<%=locals.user._id%>" class="btn btn-edit">
                        <i class="bi bi-pencil-square me-2"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <!-- Left Column - User Stats -->
            <div class="col-lg-3 mb-4">
                <div class="profile-card">
                    <div class="card-body text-center">
                        <div class="stats-card">
                            <div class="stats-number">12</div>
                            <div class="stats-label">Projects</div>
                        </div>
                        <div class="stats-card">
                            <div class="stats-number">356</div>
                            <div class="stats-label">Tasks Completed</div>
                        </div>
                        <div class="stats-card">
                            <div class="stats-number">98%</div>
                            <div class="stats-label">Success Rate</div>
                        </div>
                        <div class="stats-card">
                            <div class="stats-number">2y 6m</div>
                            <div class="stats-label">Member Since</div>
                        </div>
                    </div>
                </div>
                
                <div class="profile-card">
                    <div class="card-header">
                        <h5><i class="bi bi-shield-check me-2"></i>Account Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <div class="info-label">Status</div>
                            <div class="info-value">
                                <span class="badge badge-status badge-active">Active</span>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Last Login</div>
                            <div class="info-value">2 hours ago</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Joined Date</div>
                            <div class="info-value">January 15, 2023</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Account Type</div>
                            <div class="info-value">Premium</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Middle Column - Personal Information -->
            <div class="col-lg-5 mb-4">
                <div class="profile-card">
                    <div class="card-header">
                        <h5><i class="bi bi-person-badge me-2"></i>Personal Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <div class="info-label">Full Name</div>
                            <div class="info-value"><%=locals.user.firstname%> <%=locals.user.lastname%></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Email Address</div>
                            <div class="info-value"><%=locals.user.email%></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Phone Number</div>
                            <div class="info-value"><%=locals.user.phone%></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Join Date</div>
                            <div class="info-value"><%=locals.user.joindate%></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Gender</div>
                            <div class="info-value"><%=locals.user.gender%></div>
                        </div>
                       
                    </div>
                </div>
                
                <div class="profile-card">
                    <div class="card-header">
                        <h5><i class="bi bi-briefcase me-2"></i>Professional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="info-item">
                            <div class="info-label">Position</div>
                            <div class="info-value">Super Administrator</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Department</div>
                            <div class="info-value">IT & Administration</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Employee ID</div>
                            <div class="info-value">EMP-2023-001</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Reports To</div>
                            <div class="info-value">Sarah Johnson (Director)</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Office Location</div>
                            <div class="info-value">Floor 8, Office 812</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Right Column - Recent Activity -->
            <div class="col-lg-4 mb-4">
                <div class="profile-card">
                    <div class="card-header">
                        <h5><i class="bi bi-clock-history me-2"></i>Recent Activity</h5>
                    </div>
                    <div class="card-body">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="bi bi-person-plus"></i>
                            </div>
                            <div class="activity-content">
                                <div class="fw-semibold">Added new administrator</div>
                                <div class="activity-time">Just now</div>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                            <div class="activity-content">
                                <div class="fw-semibold">Updated project documentation</div>
                                <div class="activity-time">2 hours ago</div>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="bi bi-gear"></i>
                            </div>
                            <div class="activity-content">
                                <div class="fw-semibold">Changed system settings</div>
                                <div class="activity-time">Yesterday, 3:45 PM</div>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <div class="activity-content">
                                <div class="fw-semibold">Security audit completed</div>
                                <div class="activity-time">Dec 12, 2023</div>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="activity-content">
                                <div class="fw-semibold">Team meeting attended</div>
                                <div class="activity-time">Dec 10, 2023</div>
                            </div>
                        </div>
                        
                        <div class="text-center mt-3">
                            <a href="#" class="text-decoration-none">
                                View All Activity <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="profile-card">
                    <div class="card-header">
                        <h5><i class="bi bi-key me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary">
                                <i class="bi bi-pencil-square me-2"></i>Edit Profile
                            </button>
                            <button class="btn btn-outline-secondary">
                                <i class="bi bi-key me-2"></i>Change Password
                            </button>
                            <button class="btn btn-outline-info">
                                <i class="bi bi-bell me-2"></i>Notification Settings
                            </button>
                            <button class="btn btn-outline-warning">
                                <i class="bi bi-shield me-2"></i>Privacy Settings
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
   <%-include('Footer')%>