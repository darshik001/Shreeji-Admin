<%-include('../Header')%>

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Products</h2>
            <p class="text-secondary">Manage your product inventory</p>
        </div>
        <a href="/add-product" class="btn btn-primary px-4" style="background: linear-gradient(135deg, #3b82f6, #8b5cf6); border: none;">
            <i class="bi bi-plus-circle me-1"></i>Add New
        </a>
    </div>

    <!-- Search & Filter Bar -->
     <div class="card border-0 shadow-sm mb-4">
  <div class="card-body p-3">

    <!-- ONE FORM -->
    <form method="GET" action="">
      <div class="row g-2">

        <!-- SEARCH -->
        <div class="col-md-4">
          <div class="input-group">
            <span class="input-group-text bg-light border-0">
              <i class="bi bi-search"></i>
            </span>
            <input 
              type="text"
              name="search"
              value="<%= search %>"
              class="form-control border-0 bg-light"
              placeholder="Search products..."
            >
          </div>
        </div>

        <!-- CATEGORY -->
        <div class="col-md-3">
          <select class="form-select bg-light border-0" name="category">
            <option value="">Select Category</option>

            <% categories.forEach((cat)=> { %>
              <option 
                value="<%= cat.category %>"
                <%= category == cat.category ? 'selected' : '' %>
              >
                <%= cat.category %>
              </option>
            <% }) %>

          </select>
        </div>

        <!-- SORT -->
        <div class="col-md-3">
          <select class="form-select bg-light border-0" name="sort">
            <option  value="">Sort by Latest</option>
            <option <%= sort == 'low' ? 'selected' : '' %> value="low">Price: Low to High</option>
            <option <%= sort == 'heigh' ? 'selected' : '' %> value="heigh">Price: High to Low</option>
            <option <%= sort == 'name' ? 'selected' : '' %> value="name">Name: A to Z</option>
          </select>
        </div>

        <!-- BUTTONS -->
        <div class="col-md-2 d-flex gap-2">
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-funnel"></i> Filter
          </button>

          <a href="/product/view-product" class="btn btn-outline-secondary w-100">
            Reset
          </a>
        </div>

      </div>
    </form>

  </div>
</div>


    <!-- Products Grid -->
    <div class="row g-4">

        <%products.forEach((product)=>{%>
             <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; overflow: hidden;">
                <div class="position-relative">
                    <img src="<%=product.productImage[0]%>" class="card-img-top" alt="Product" style="height: 200px; object-fit: cover;">
                    <span class="position-absolute top-0 end-0 bg-success text-white px-2 py-1 m-2 rounded-3 small">In Stock</span>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="fw-bold mb-0"><%=product.name%></h6>
                        <span class="badge bg-primary bg-opacity-10 text-primary"><%=product.categoryid.category%></span>
                    </div>
                    <p class="small text-secondary mb-2"><%=product.description%></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-primary fs-5">$<%=product.price%></span>
                        <span class="small text-secondary">Stock: <%=product.stock%></span>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 p-3 pt-0">
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary flex-fill"><i class="bi bi-eye"></i> View</button>
                        <button class="btn btn-sm btn-outline-warning flex-fill"><i class="bi bi-pencil"></i> Edit</button>
                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                    </div>
                </div>
            </div>
        </div>
            <%})%>
        <!-- Product Card 1 -->
       


    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-5">
        <nav>
            <ul class="pagination">
                <li class="page-item <%=currentpage <=1?'d-none disabled':''%>">
                    <a class="page-link border-0 bg-light" href="?page=<%=currentpage - 1%>"><i class="bi bi-chevron-left"></i></a>
                </li>
                <%for(let i = 1;i<=totalpage;i++){%>
                    
                    <li class="page-item"><a class="page-link border-0 <%=currentpage ==i?'active text-white':''%>" href="?page=<%=i%>&search=<%=search%>"><%=i%></a></li>
                    <%}%>
                <li class="page-item <%=currentpage == totalpage?'d-none disabled':''%>">
                    <a class="page-link border-0 bg-light" href="?page=<%=currentpage + 1%>"><i class="bi bi-chevron-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    body {
        background: #f0f5ff;
    }
    
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
    }
    
    .btn-outline-primary {
        border-color: #e2e8f0;
        color: #3b82f6;
    }
    
    .btn-outline-primary:hover {
        background: #3b82f6;
        border-color: #3b82f6;
        color: white;
    }
    
    .btn-outline-warning {
        border-color: #e2e8f0;
        color: #f59e0b;
    }
    
    .btn-outline-warning:hover {
        background: #f59e0b;
        border-color: #f59e0b;
        color: white;
    }
    
    .btn-outline-danger {
        border-color: #e2e8f0;
        color: #ef4444;
    }
    
    .btn-outline-danger:hover {
        background: #ef4444;
        border-color: #ef4444;
        color: white;
    }
    
    .pagination .page-link {
        border-radius: 10px;
        margin: 0 3px;
        color: #64748b;
        font-weight: 500;
    }
    
    .pagination .page-link:hover {
        background: #3b82f6 !important;
        color: white;
    }
</style>

<%-include('../Footer')%>